location=eastus2
publisher=MicrosoftWindowsDesktop
offers=windows-10

# List offers based on pubisher
az vm image list-offers -l $location \
                        -p $publisher \
                        -o table

# List SKUs based on offer & publisher
az vm image list-skus -l $location \
                      -p $publisher \
                      -f $offers \
                      -o table

